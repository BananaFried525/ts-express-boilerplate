{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "boot/*": [
        "./src/boot/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "queues/*": [
        "./src/queues/*"
      ],
      "type/*": [
        "./src/type/*"
      ],
      "validates/*": [
        "./src/validates/*"
      ],
      // "@test/*": ["./test/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },  
  // "include": [
  //   "src/**/*"
  // ],
  "exclude": [
    "node_modules",
    "test/**/*.test.ts"
  ],
}
